# Root .gitignore - combined from apps/web/.gitignore and apps/api/.gitignore
# Sources: apps/web/.gitignore, apps/api/.gitignore

# Node / package managers
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# Lockfiles / build output
/dist
/build
/out
/.next/

# Logs
logs
*.log
npm-debug.log*
pnpm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# Testing
/coverage
/.nyc_output

# Runtime / temp
.temp
.tmp
pids
*.pid
*.seed
*.pid.lock

# OS
.DS_Store
*.pem

# Environment files
.env*
.env
.env.development.local
.env.test.local
.env.production.local
.env.local

# Vercel
.vercel

# IDEs and editors
/.idea
.project
.classpath
.c9/
*.launch
.settings/

# VSCode (allow committing workspace settings/tasks/launch/extensions)
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json

# Prettier/formatting
.prettierrc
.prettierignore

# Node diagnostic reports
report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json
