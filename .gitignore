# Root .gitignore - combined from apps/web/.gitignore and apps/api/.gitignore
# Sources: apps/web/.gitignore, apps/api/.gitignore

# Node / package managers
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# Lockfiles / build output
/dist
/build
/out
/.next/

# Logs
logs
*.log
npm-debug.log*
pnpm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# Testing
/coverage
/.nyc_output

# Runtime / temp
.temp
.tmp
pids
*.pid
*.seed
*.pid.lock

# OS
.DS_Store
*.pem

# Environment files
.env*
.env
.env.development.local
.env.test.local
.env.production.local
.env.local

# Vercel
.vercel

# IDEs and editors
/.idea
.project
.classpath
.c9/
*.launch
.settings/

# VSCode (allow committing workspace settings/tasks/launch/extensions)
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json

# Prettier/formatting

# Node diagnostic reports
report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json

# Workspace-specific ignores (ensure these cover apps/* and packages/*)
# Node modules for any workspace
/**/node_modules/

# Build artifacts for apps and packages
/**/dist/
/**/build/
/**/.next/
/**/out/
/**/.output/
/**/.turbo/
# API output and TurboRepo cache (root and workspaces)
apps/*/.output/**
packages/*/.output/**
.turbo/
apps/*/.turbo/**
packages/*/.turbo/**

# Logs and temp files
**/logs/
**/*.log

# Ignore local environment overrides anywhere
**/.env
**/.env.*

# Editor directories and OS files
**/.vscode/
**/.idea/
.DS_Store

# If you accidentally committed build artifacts, run the following to untrack them:
# git rm -r --cached apps/web/.next apps/api/dist packages/*/dist
# then commit the change and push.
